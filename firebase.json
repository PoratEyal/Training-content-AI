{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "/en",
        "headers": [
          { "key": "Content-Language", "value": "en" }
        ]
      },
      {
        "source": "/en/**",
        "headers": [
          { "key": "Content-Language", "value": "en" }
        ]
      },
      {
        "source": "/es",
        "headers": [
          { "key": "Content-Language", "value": "es" }
        ]
      },
      {
        "source": "/es/**",
        "headers": [
          { "key": "Content-Language", "value": "es" }
        ]
      },
      {
        "source": "/fr",
        "headers": [
          { "key": "Content-Language", "value": "fr" }
        ]
      },
      {
        "source": "/fr/**",
        "headers": [
          { "key": "Content-Language", "value": "fr" }
        ]
      },
      {
        "source": "/ar",
        "headers": [
          { "key": "Content-Language", "value": "ar" }
        ]
      },
      {
        "source": "/ar/**",
        "headers": [
          { "key": "Content-Language", "value": "ar" }
        ]
      },
      {
        "source": "/he",
        "headers": [
          { "key": "Content-Language", "value": "he" }
        ]
      },
      {
        "source": "/he/**",
        "headers": [
          { "key": "Content-Language", "value": "he" }
        ]
      }
    ]
  }
}
